    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:layout_below="@+id/lin1"
        android:layout_marginTop="8dp"
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>
