<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.umyhnystma.matsvisitumea.ButtonFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lin1"
        android:weightSum="2"
        android:background="@color/colorLightBlue"
        android:layout_width="match_parent"
        android:layout_height="73dp">

        <ImageView
            android:id="@+id/buttonmapwithtext"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:padding="1dp"
            android:clipToPadding="false"
            android:elevation="5dp"
            android:scaleType="fitXY"
            android:background="@drawable/background_border"
            android:src="@drawable/buttonmapwithtext"
            android:layout_width="100dp"
            android:layout_height="70dp" />
        <ImageView
            android:id="@+id/buttonlistwithtext"
            android:layout_toRightOf="@+id/buttonmapwithtext"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:clipToPadding="false"
            android:elevation="5dp"
            android:src="@drawable/buttonlistwithtext"
            android:padding="1dp"
            android:background="@drawable/background_border"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="70dp" />
    </LinearLayout>

</FrameLayout>
